<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <configSections>
        <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
            <section name="SistemaChamados.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
        </sectionGroup>
    </configSections>
    
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
    
    <!-- ✅ CONNECTION STRING CORRIGIDA PARA MSSQLSERVER (INSTÂNCIA PADRÃO) -->
    <connectionStrings>
        <add name="Suporte_Tecnico"
             connectionString="Server=localhost;Database=Suporte_Tecnico;Integrated Security=true;Connection Timeout=30;Encrypt=false;TrustServerCertificate=true;"
             providerName="System.Data.SqlClient" />
    </connectionStrings>
    
    <!-- Configurações da Aplicação -->
    <appSettings>
        <add key="ApplicationName" value="Sistema de Chamados" />
        <add key="Version" value="1.0.0" />
        <add key="CompanyName" value="InterFix Ltda" />
        <add key="SessionTimeoutMinutes" value="30" />
        <add key="MaxLoginAttempts" value="3" />
        <add key="PasswordMinLength" value="6" />
        <add key="RequirePasswordComplexity" value="false" />
        <add key="EnableLogging" value="true" />
        <add key="LogPath" value="C:\Logs\SistemaChamados\" />
        <add key="LogLevel" value="Info" />
        <add key="MaxLogFileSizeMB" value="10" />
        <add key="MaxLogFiles" value="30" />
        <add key="EnableEmailNotifications" value="false" />
        <add key="SmtpServer" value="smtp.gmail.com" />
        <add key="SmtpPort" value="587" />
        <add key="SmtpEnableSsl" value="true" />
        <add key="EmailFrom" value="sistema@suaempresa.com" />
        <add key="EmailFromName" value="Sistema de Chamados" />
        <add key="EmailUsername" value="seu_email@gmail.com" />
        <add key="EmailPassword" value="sua_senha_app" />
        <add key="GridPageSize" value="50" />
        <add key="AutoRefreshSeconds" value="30" />
        <add key="SearchMinChars" value="3" />
        <add key="DefaultTheme" value="Light" />
        <add key="EnableAutoBackup" value="false" />
        <add key="BackupPath" value="C:\Backup\SistemaChamados\" />
        <add key="BackupIntervalHours" value="24" />
        <add key="MaxBackupFiles" value="7" />
        <add key="ConnectionPoolSize" value="100" />
        <add key="CommandTimeout" value="30" />
        <add key="EnableQueryCache" value="true" />
        <add key="CacheExpirationMinutes" value="15" />
    </appSettings>
    
    <system.diagnostics>
        <trace autoflush="true">
            <listeners>
                <add name="textWriterTraceListener"
                     type="System.Diagnostics.TextWriterTraceListener"
                     initializeData="C:\Logs\SistemaChamados\trace.log" />
            </listeners>
        </trace>
    </system.diagnostics>
    
    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
        </assemblyBinding>
        <gcServer enabled="true" />
        <gcConcurrent enabled="true" />
    </runtime>
    
    <!-- ✅ APPLICATION SETTINGS TAMBÉM CORRIGIDO -->
    <applicationSettings>
        <SistemaChamados.Properties.Settings>
            <setting name="ConnectionString" serializeAs="String">
                <value>Server=localhost;Database=Suporte_Tecnico;Integrated Security=true;Connection Timeout=30;Encrypt=false;TrustServerCertificate=true;</value>
            </setting>
            <setting name="EnableLogging" serializeAs="String">
                <value>True</value>
            </setting>
            <setting name="LogPath" serializeAs="String">
                <value>C:\Logs\SistemaChamados\</value>
            </setting>
            <setting name="SessionTimeoutMinutes" serializeAs="String">
                <value>30</value>
            </setting>
        </SistemaChamados.Properties.Settings>
    </applicationSettings>
    
    <system.net>
        <defaultProxy enabled="false" />
        <settings>
            <httpWebRequest useUnsafeHeaderParsing="false" />
        </settings>
    </system.net>
</configuration>